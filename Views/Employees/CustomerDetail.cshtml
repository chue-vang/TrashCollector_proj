@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "CustomerDetail";
}

<h1>Customer Detail</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First_Name)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Last_Name)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Zipcode
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zipcode)
        </dd>
        <dt class = "col-sm-2">
            Garbage Pickup Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pickup_Day)
        </dd>
        <dt class = "col-sm-2">
            Additional Pickup
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Extra_Pickup)
        </dd>
        <dt class = "col-sm-2">
            Start Suspend Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start_Suspend_Date)
        </dd>
        <dt class = "col-sm-2">
            End Suspend Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End_Suspend_Date)
        </dd>
        <dt class = "col-sm-2">
            Balance 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Charges_Owe)
        </dd>
        <dt class = "col-sm-2">
            Confirm Garbage Pickup
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Confirm_Pickup)
        </dd>
        <dt hidden class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdentitiyUser)
        </dt>
        <dd hidden class = "col-sm-10">
            @Html.DisplayFor(model => model.IdentitiyUser.Id)
